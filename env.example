# ========================================
# 老人帮后端服务 - 环境配置模板
# ========================================
# 复制此文件为 .env 并填写实际配置

# 基础配置
NODE_ENV=development
PORT=3001
CORS_ORIGIN=*

# 数据库配置 (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/laorenbang?schema=public"

# JWT 配置
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Redis 配置 (可选，用于缓存和验证码)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# 微信小程序配置
# ========================================
WECHAT_APPID=your-wechat-appid
WECHAT_APP_SECRET=your-wechat-app-secret

# 微信支付配置
WECHAT_MCH_ID=your-wechat-mch-id
WECHAT_PAY_KEY=your-wechat-pay-key
WECHAT_PAY_CERT_PATH=/path/to/apiclient_cert.pem
WECHAT_PAY_KEY_PATH=/path/to/apiclient_key.pem

# ========================================
# 腾讯云配置
# ========================================

# 短信服务
SMS_SECRET_ID=your-tencent-secret-id
SMS_SECRET_KEY=your-tencent-secret-key
SMS_APP_ID=your-sms-app-id
SMS_SIGN_NAME=老人帮

# 对象存储 COS
COS_SECRET_ID=your-cos-secret-id
COS_SECRET_KEY=your-cos-secret-key
COS_BUCKET=your-bucket-name
COS_REGION=ap-beijing

# ========================================
